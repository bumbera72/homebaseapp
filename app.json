{
  "expo": {
    "name": "Homebase",
    "slug": "homebase",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FBF7F2"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kendallhaechten.homebase",
      "buildNumber": "2",
      "usesAppleSignIn": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCalendarsUsageDescription": "Homebase uses your calendar to show todayâ€™s schedule and let you add events.",
        "NSRemindersUsageDescription": "Homebase can access reminders to help you manage tasks."
      }
    },
    "android": {
      "package": "com.kendallhaechten.homebase",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FBF7F2"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      "expo-apple-authentication"
    ],
    "extra": {
      "eas": {
        "projectId": "e0401e35-018a-4a86-8ecb-204c1cc43a84"
      }
    },
    "owner": "thehomebase"
  }
}
